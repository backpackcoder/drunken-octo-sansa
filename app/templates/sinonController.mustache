<div class="ui-sinon">
    <div class="ui-sinon-requests">
        <h4>Requests</h4>
        <ol>
            {{#requests}}
            <li>
                <span>{{url}}</span>
            </li>
            {{/requests}}
            {{^requests}}
            <li>
                <span>No requests</span>
            </li>
            {{/requests}}
        </ol>
    </div>
    <div class="ui-sinon-response">
        <h4>Response</h4>
        <textarea class="input-block-level"></textarea>
        <button class="pull-right">Send Response</button>
    </div>
</div>